@model BudgetPlanner.Models.Transaction

<h2 class="mb-4">Add Transaction</h2>

<form method="post" class="card p-4">
    <div class="mb-3">
    <label asp-for="Type" class="form-label">Type</label>
    <select asp-for="Type" class="form-select bg-dark text-light border-secondary">
        <option>Income</option>
        <option>Expense</option>
    </select>
</div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Category" class="form-label"></label>
        <input asp-for="Category" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Amount" class="form-label"></label>
        <input asp-for="Amount" type="number" step="0.01" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Date" class="form-label"></label>
        <input asp-for="Date" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Add Transaction</button>
</form>
